<%= render "shared/errors", obj: @category %>

<%= form_with(model: @category, class: "shadow p-4 bg-dark mb-2 rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name ,"Category Name", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter an Name" %>
    </div>
  </div>
  <div class="form-group row justify-content-center mb-0">
    <%= f.submit class: "btn btn-outline-light btn-lg"%>  
  </div> 
<% end  %>
