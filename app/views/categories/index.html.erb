<div class="container pt-2 pb-5">
	<h3 class="text-center text-dark">Categories</h3>

  <div class="flickr_pagination">
    <div class="page_info mb-2">
      <%= page_entries_info @categories %>
    </div>
    <%= will_paginate @categories, container: false %>
  </div>

  <% @categories.each do |category| %>
		<div class="row justify-content-center">
			<div class="col-md-5 my-3">
				<div class="card text-center shadow bg-white rounded">
					<div class="card-body">
						<h5 class="card-title">
							<%= link_to "#{category.name}", category_path(category), class: "text-success" %>
						</h5>
            <p class="card-text">
							<%= pluralize(category.articles.size, 'article') %>
						</p>
					</div>
					<div class="card-footer text-muted">
						<small
							>Created <%= time_ago_in_words(category.created_at) %> ago &
							updated <%= time_ago_in_words(category.updated_at) %> ago
						</small>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
