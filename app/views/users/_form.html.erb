<div class="row justify-content-center text-white">
  <div class="col-md-10">
  
    <%= render "shared/errors", obj: @user %>

    <%= form_with(model: @user, class: "shadow p-4 bg-dark mb-2 rounded", local: true) do |f| %>
      <div class="form-group row">
          <%= f.label :username , class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter an Username" %>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :email , class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter an Email-address"%>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :password , class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Create a new password" %>
          </div>
      </div>
      <% if @user.new_record? %>
        <div class="form-group row">
          <%= f.label :password_confirmation , class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-Enter above password" %>
          </div>
        </div>
      <% end %>
      <div class="form-group row justify-content-center mb-0">
        <%= f.submit(@user.new_record? ? "sign up" : "update Account", class: "btn btn-outline-light btn-lg")%>  
      </div> 
    <% end  %>
  </div>
</div>
