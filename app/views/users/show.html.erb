<div class="container p-2">

  <h4 class="text-center text-dark"><%= @user.username %>'s Profile</h4>

  <%= gravatar_for @user, size: 150 %>

  <div class="text-center mt-2">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-primary"%>   
  </div>

  <h4 class="text-center text-dark mt-2">Articles</h4>

  <div class="flickr_pagination">
    <div class="page_info mb-2">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, container: false %> <%#, page_links: false %>
  </div>

  <%= render "articles/article" %>

  <div class="flickr_pagination">
    <%= will_paginate @articles, container: false %> <%#, page_links: false %>
  </div>
</div>

