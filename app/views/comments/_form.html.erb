<%= form_for([@article, @article.comments.build]) do |f| %>
  <%= f.hidden_field :name, value: curr_user.username %>
  <div class="form-group row justify-content-center">
    <%= f.rich_text_area :body, required: true, class: "form-control" %>
  </div>
  <div class="form-group row justify-content-center">
    <%= f.submit "post comment", class: "btn btn-outline-dark btn-sm"%>
  </div>
<% end %>
