<div class="container pt-2 pb-5">
	<h1 class="text-center text-dark">Articles Listing Page</h1>

	<%= link_to "Create a new article", new_article_path %> 
  <% @articles.order(:id).each do |article| %>
		<div class="row justify-content-center">
			<div class="col-md-8 my-3">
				<div class="card text-center shadow bg-white rounded">
					<div class="card-header font-italic">by Soumya</div>
					<div class="card-body">
						<h5 class="card-title">
							<%= link_to "#{article.title}", article_path(article), class:
							"text-success" %>
						</h5>
						<p class="card-text">
							<%= truncate(article.description, length: 100) %>
						</p>
						<%= link_to "view", article_path(article), class: "btn
						btn-outline-success mr-2" %> <%= link_to "edit",
						edit_article_path(article), class: "btn btn-outline-primary mr-2" %>
						<%= link_to "Delete", article_path(article), method: :delete, data:
						{confirm: 'Are you sure?'}, class: "btn btn-outline-danger mr-2" %>
					</div>
					<div class="card-footer text-muted">
						<small
							>Created <%= time_ago_in_words(article.created_at) %> ago &
							updated <%= time_ago_in_words(article.updated_at) %> ago
						</small>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
  