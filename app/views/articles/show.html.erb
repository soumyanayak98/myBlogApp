<div class="container p-2">
  <h3 class="text-center"><%= @article.title %></h3>

  <div class="row justify-content-center">
    <div class="col-md-8 my-3">
      <div class="card text-center shadow bg-white rounded ">
        <div class="card-header font-italic">
          by <%= @article.user.username %>
        </div>
        <div class="card-body">
          <div class="card-text text-left">
            <%= simple_format(@article.description) %>
          </div>
          <%= link_to "back", articles_path, class: "btn btn-outline-success btn-sm mr-2" %>
          <%= link_to "edit", edit_article_path(@article), class: "btn btn-outline-primary btn-sm mr-2" %>
          <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: 'Are you sure?'},  class: "btn btn-outline-danger btn-sm" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@article.created_at) %> ago &
            updated <%= time_ago_in_words(@article.updated_at) %> ago
          </small>
        </div>
      </div>
    </div>  
  </div>
</div>
